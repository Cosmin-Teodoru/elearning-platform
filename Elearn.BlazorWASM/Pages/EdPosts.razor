@using Elearn.BlazorWASM
@using Elearn.HttpClients.Service
@using Elearn.Shared.Models
@inject IPostService PostService
@using Elearn.BlazorWASM.Pages.UIComponents


@if (_posts == null)
{
    <span>Getting the educational posts...</span>
    <MudProgressCircular></MudProgressCircular>
}
else
{
    @if (_posts.Count == 0)
    {
        <span> No posts </span>
    }
    else
    {
        <MudGrid Spacing="@spacing" Justify="Justify.FlexStart">
            @foreach (var post in _posts)
            {
                <MudItem xs="6" sm="3">
                    <PostCard Post="@post"></PostCard>
                </MudItem>
            }
        </MudGrid>
    }
}


@code {
    public int spacing { get; set; } = 2;

    private List<Post>? _posts;

    protected override async Task OnInitializedAsync()
    {
        _posts = await PostService.GetPostsAsync();
    }

}